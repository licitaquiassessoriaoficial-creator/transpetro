  },
  "Benner": {
    "ConnectionString": "Server=localhost;Database=BENNER_PRODUCAO;User Id=kurier_user;Password=kurier_pass;TrustServerCertificate=true;Connection Timeout=30;Command Timeout=300;"
  },
  "Jobs": {
    "IntervalMinutes": 5,
    "PageSize": 100,
    "DaysToConsult": 7,
    "ConfirmationBatchSize": 50
  },
  "Monitoring": {
    "Enabled": true,
    "ConfirmarNaKurier": true,
    "FetchResumos": true,
    "FetchInteiroTeor": false,
    "ConfirmarPublicacoesKey": "Identificador",
    "DistribuicaoSettings": {
      "AutoConfirm": true,
      "BatchSize": 50,
      "MaxRetries": 3
    },
    "PublicacaoSettings": {
